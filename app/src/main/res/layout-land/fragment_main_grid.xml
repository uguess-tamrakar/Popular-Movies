<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Main Title Text View-->
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_main_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/main_margin_bottom"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_main_text_size"
            android:textStyle="bold" />

        <!--Main Grid View-->
        <GridView
            android:id="@+id/gv_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:horizontalSpacing="@dimen/gv_main_horizontal_spacing"
            android:nestedScrollingEnabled="true"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/gv_main_vertical_spacing" />

    </LinearLayout>
</layout>
